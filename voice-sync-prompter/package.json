{
  "name": "voice-sync-prompter-monorepo",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=@vsp/web",
    "dev:desktop": "turbo dev --filter=@vsp/desktop",
    "dev:server": "turbo dev --filter=@vsp/server",
    "build": "turbo build",
    "build:web": "turbo build --filter=@vsp/web",
    "build:desktop": "turbo build --filter=@vsp/desktop",
    "build:server": "turbo build --filter=@vsp/server",
    "build:packages": "turbo build --filter='./packages/*'",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "clean": "turbo clean && rm -rf node_modules"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "~5.6.2"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20"
  }
}
